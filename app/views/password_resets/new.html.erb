<% provide(:title, "パスワード忘れ") %>
<h2>パスワード忘れ</h2>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.submit "送信する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>